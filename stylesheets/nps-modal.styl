flex-row(justify)
  display flex
  flex-direction row
  justify-content justify
  margin-bottom 16px

#nps-modal

  .modal-body
    padding-left 32px
    padding-right 32px

  .modal-header
    border none
    padding-bottom 0

  .centered-row
    flex-row(center)

  .left-row
    flex-row(flex-start)

  .right-row
    flex-row(flex-end)

  .score > .btn
    margin 4px
    line-height 2.5
    border-radius 50%
    width 2.5em
    height 2.5em
    padding 0

    &:hover
      transform scale(1.25)

  .score-label
    margin 8px
    font-size 80%
    position absolute

  textarea
    width 100%
    margin-bottom 16px
